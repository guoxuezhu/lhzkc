<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/splash_bg"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context=".ui.DianyuanActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/dy_all_open"
            android:layout_width="@dimen/btn_bg_1"
            android:layout_height="@dimen/btn_bg_1"
            android:background="@drawable/btn_status_1"
            android:scaleType="fitCenter"
            android:src="@drawable/imgbtn_qk" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全开"
            android:textColor="@color/white" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_50"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/dy_all_close"
            android:layout_width="@dimen/btn_bg_1"
            android:layout_height="@dimen/btn_bg_1"
            android:background="@drawable/btn_status_1"
            android:scaleType="fitCenter"
            android:src="@drawable/imgbtn_qg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全关"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>