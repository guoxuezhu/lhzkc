<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.JuzhenActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一键模式"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg_1"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <CheckBox
            android:id="@+id/spbtn_all_diannao"
            style="@style/check_box_2"
            android:text="电脑1" />

        <CheckBox
            android:id="@+id/spbtn_all_touping"
            style="@style/check_box_2"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="电脑2" />

        <CheckBox
            android:id="@+id/spbtn_all_zu_1"
            style="@style/check_box_2"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="电脑3" />

        <CheckBox
            android:id="@+id/spbtn_all_zu_2"
            style="@style/check_box_2"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="电脑4" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="自由模式"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/layout_bg_1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频输入"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12" />

            <CheckBox
                android:id="@+id/spbtn_dan_in_lsdn"
                style="@style/check_box_2"
                android:layout_marginTop="@dimen/dp_10"
                android:text="电脑1" />

            <CheckBox
                android:id="@+id/spbtn_dan_in_tsj"
                style="@style/check_box_2"
                android:layout_marginTop="@dimen/dp_10"
                android:text="电脑2" />

            <CheckBox
                android:id="@+id/spbtn_dan_in_bjb"
                style="@style/check_box_2"
                android:layout_marginTop="@dimen/dp_10"
                android:text="电脑3" />

            <CheckBox
                android:id="@+id/spbtn_dan_in_gpy"
                style="@style/check_box_2"
                android:layout_marginTop="@dimen/dp_10"
                android:text="电脑4" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/layout_bg_1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频输出"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12" />

            <CheckBox
                android:id="@+id/spbtn_dan_out_ty"
                style="@style/check_box_2"
                android:layout_marginTop="@dimen/dp_10"
                android:text="大屏1" />

            <CheckBox
                android:id="@+id/spbtn_dan_out_dp1"
                style="@style/check_box_2"
                android:layout_marginTop="@dimen/dp_10"
                android:text="大屏2" />

            <CheckBox
                android:id="@+id/spbtn_dan_out_dp2"
                style="@style/check_box_2"
                android:layout_marginTop="@dimen/dp_10"
                android:text="大屏3" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>