    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_cl_allopen"
            android:layout_width="@dimen/shebei_btn_width"
            android:layout_height="@dimen/shebei_btn_height"
            android:background="@drawable/btn_status_2"
            android:text="窗帘全开"
            android:textColor="@color/black" />


        <Button
            android:id="@+id/btn_cl_allclosed"
            android:layout_width="@dimen/shebei_btn_width"
            android:layout_height="@dimen/shebei_btn_height"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@drawable/btn_status_2"
            android:text="窗帘全关"
            android:textColor="@color/black" />


    </LinearLayout>


