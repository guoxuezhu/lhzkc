<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".ui.YinpinActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="总音量"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/layout_bg_1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10">


        <Button
            android:id="@+id/zyl_jia"
            android:layout_width="@dimen/yinpin_btn_width"
            android:layout_height="@dimen/yinpin_btn_height"
            android:background="@drawable/btn_status_2"
            android:text="音量＋"
            android:textColor="@color/black" />


        <Button
            android:id="@+id/zyl_jian"
            android:layout_width="@dimen/yinpin_btn_width"
            android:layout_height="@dimen/yinpin_btn_height"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/btn_status_2"
            android:text="音量－"
            android:textColor="@color/black" />


        <CheckBox
            android:id="@+id/zyl_jingyin"
            android:layout_width="@dimen/yinpin_btn_width"
            android:layout_height="@dimen/yinpin_btn_height"
            android:background="@drawable/checked_status_1"
            android:button="@null"
            android:gravity="center"
            android:text="静音"
            android:textColor="@color/black" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="音响"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/layout_bg_1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:visibility="gone">


        <Button
            android:id="@+id/yx_jia"
            android:layout_width="@dimen/yinpin_btn_width"
            android:layout_height="@dimen/yinpin_btn_height"
            android:background="@drawable/btn_status_2"
            android:text="音量＋"
            android:textColor="@color/black" />


        <Button
            android:id="@+id/yx_jian"
            android:layout_width="@dimen/yinpin_btn_width"
            android:layout_height="@dimen/yinpin_btn_height"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/btn_status_2"
            android:text="音量－"
            android:textColor="@color/black" />


        <CheckBox
            android:id="@+id/yx_jingyin"
            android:layout_width="@dimen/yinpin_btn_width"
            android:layout_height="@dimen/yinpin_btn_height"
            android:background="@drawable/checked_status_1"
            android:button="@null"
            android:gravity="center"
            android:text="静音"
            android:textColor="@color/black" />


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="麦克风"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/layout_bg_1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:visibility="gone">


        <Button
            android:id="@+id/mkf_jia"
            android:layout_width="@dimen/yinpin_btn_width"
            android:layout_height="@dimen/yinpin_btn_height"
            android:background="@drawable/btn_status_2"
            android:text="音量＋"
            android:textColor="@color/black" />


        <Button
            android:id="@+id/mkf_jian"
            android:layout_width="@dimen/yinpin_btn_width"
            android:layout_height="@dimen/yinpin_btn_height"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/btn_status_2"
            android:text="音量－"
            android:textColor="@color/black" />


        <CheckBox
            android:id="@+id/mkf_jingyin"
            android:layout_width="@dimen/yinpin_btn_width"
            android:layout_height="@dimen/yinpin_btn_height"
            android:background="@drawable/checked_status_1"
            android:button="@null"
            android:gravity="center"
            android:text="静音"
            android:textColor="@color/black" />


    </LinearLayout>

</LinearLayout>