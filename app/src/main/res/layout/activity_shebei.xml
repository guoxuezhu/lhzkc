<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_bg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.ShebeiActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnshangke"
            android:layout_width="@dimen/shebei_btn_width"
            android:layout_height="@dimen/shebei_btn_height"
            android:background="@drawable/btn_status_2"
            android:text="上课"
            android:textColor="@color/black" />


        <Button
            android:id="@+id/btnxiake"
            android:layout_width="@dimen/shebei_btn_width"
            android:layout_height="@dimen/shebei_btn_height"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@drawable/btn_status_2"
            android:text="下课"
            android:textColor="@color/black" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_margin="@dimen/dp_30"
        android:background="@drawable/layout_bg_1"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/btn_chaunglian"
                android:layout_width="@dimen/shebei_btn_width"
                android:layout_height="@dimen/shebei_btn_height"
                android:background="@drawable/btn_status_2"
                android:text="窗帘"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_dengguang"
                android:layout_width="@dimen/shebei_btn_width"
                android:layout_height="@dimen/shebei_btn_height"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@drawable/btn_status_2"
                android:text="灯光"
                android:textColor="@color/black" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/btn_xinfeng"
                android:layout_width="@dimen/shebei_btn_width"
                android:layout_height="@dimen/shebei_btn_height"
                android:background="@drawable/btn_status_2"
                android:text="新风"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_qita"
                android:layout_width="@dimen/shebei_btn_width"
                android:layout_height="@dimen/shebei_btn_height"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@drawable/btn_status_2"
                android:text="其它"
                android:textColor="@color/black" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>