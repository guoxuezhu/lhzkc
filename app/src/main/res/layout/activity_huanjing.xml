<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".ui.HuanjingActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg_1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="温度"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />


            <TextView
                android:id="@+id/tv_wsd_wd"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/et_bg_ip"
                android:paddingLeft="@dimen/dp_5"
                android:textColor="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">


            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="湿度"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />


            <TextView
                android:id="@+id/tv_wsd_sd"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/et_bg_ip"
                android:paddingLeft="@dimen/dp_5"
                android:textColor="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">


            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="PM2.5"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />


            <TextView
                android:id="@+id/tv_wsd_pm"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/et_bg_ip"
                android:paddingLeft="@dimen/dp_5"
                android:textColor="@color/white" />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/layout_bg_1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/rbtn_cl_open"
                android:layout_width="@dimen/shebei_btn_width"
                android:layout_height="@dimen/shebei_btn_height"
                android:background="@drawable/btn_status_2"
                android:text="窗帘开"
                android:textColor="@color/black" />


            <Button
                android:id="@+id/rbtn_cl_close"
                android:layout_width="@dimen/shebei_btn_width"
                android:layout_height="@dimen/shebei_btn_height"
                android:background="@drawable/btn_status_2"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="窗帘关"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/rbtn_hbd_open"
                android:layout_width="@dimen/shebei_btn_width"
                android:layout_height="@dimen/shebei_btn_height"
                android:background="@drawable/btn_status_2"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="黑板灯开"
                android:textColor="@color/black" />


            <Button
                android:id="@+id/rbtn_hbd_close"
                android:layout_width="@dimen/shebei_btn_width"
                android:layout_height="@dimen/shebei_btn_height"
                android:background="@drawable/btn_status_2"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="黑板灯关"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/rbtn_jsd_open"
                android:layout_width="@dimen/shebei_btn_width"
                android:layout_height="@dimen/shebei_btn_height"
                android:background="@drawable/btn_status_2"
                android:text="教室灯开"
                android:textColor="@color/black" />


            <Button
                android:id="@+id/rbtn_jsd_close"
                android:layout_width="@dimen/shebei_btn_width"
                android:layout_height="@dimen/shebei_btn_height"
                android:background="@drawable/btn_status_2"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="教室灯关"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/rbtn_cj_open"
                android:layout_width="@dimen/shebei_btn_width"
                android:layout_height="@dimen/shebei_btn_height"
                android:background="@drawable/btn_status_2"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="场景开"
                android:textColor="@color/black" />


            <Button
                android:id="@+id/rbtn_cj_close"
                android:layout_width="@dimen/shebei_btn_width"
                android:layout_height="@dimen/shebei_btn_height"
                android:background="@drawable/btn_status_2"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="场景关"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/rbtn_tyj_open"
                android:layout_width="@dimen/shebei_btn_width"
                android:layout_height="@dimen/shebei_btn_height"
                android:background="@drawable/btn_status_2"
                android:text="投影开"
                android:textColor="@color/black" />


            <Button
                android:id="@+id/rbtn_tyj_close"
                android:layout_width="@dimen/shebei_btn_width"
                android:layout_height="@dimen/shebei_btn_height"
                android:background="@drawable/btn_status_2"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="投影关"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/rbtn_tyj_bu_open"
                android:layout_width="@dimen/shebei_btn_width"
                android:layout_height="@dimen/shebei_btn_height"
                android:background="@drawable/btn_status_2"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="幕布升"
                android:textColor="@color/black" />


            <Button
                android:id="@+id/rbtn_tyj_bu_close"
                android:layout_width="@dimen/shebei_btn_width"
                android:layout_height="@dimen/shebei_btn_height"
                android:background="@drawable/btn_status_2"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="幕布降"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/rbtn_kt_open"
                android:layout_width="@dimen/shebei_btn_width"
                android:layout_height="@dimen/shebei_btn_height"
                android:background="@drawable/btn_status_2"
                android:text="空调开"
                android:textColor="@color/black" />


            <Button
                android:id="@+id/rbtn_kt_close"
                android:layout_width="@dimen/shebei_btn_width"
                android:layout_height="@dimen/shebei_btn_height"
                android:background="@drawable/btn_status_2"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="空调关"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/rbtn_kt_ms"
                android:layout_width="@dimen/shebei_btn_width"
                android:layout_height="@dimen/shebei_btn_height"
                android:background="@drawable/btn_status_2"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="空调自动"
                android:textColor="@color/black" />


            <Button
                android:id="@+id/rbtn_mj_door"
                android:layout_width="@dimen/shebei_btn_width"
                android:layout_height="@dimen/shebei_btn_height"
                android:background="@drawable/btn_status_2"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="开门"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>




</LinearLayout>